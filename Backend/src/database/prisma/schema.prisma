// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  email        String    @unique
  password     String    @unique
  passwordSalt String    @unique
  isApproved   Boolean   @default(false)
  role         String
  accessToken  String?
  refreshToken String?
  createdDate  DateTime  @default(now())
  lastModified DateTime  @default(now())
  Investor     Investor?
  Startups     Startup?
}

model Investor {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  email        String    @unique
  createdDate  DateTime  @default(now())
  lastModified DateTime  @default(now())
  userId       String    @unique @db.ObjectId
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  startupIDs   String[]  @db.ObjectId
  startups     Startup[] @relation(fields: [startupIDs], references: [id])
}

model Startup {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  companyName  String
  email        String     @unique
  createdDate  DateTime   @default(now())
  lastModified DateTime   @default(now())
  userId       String     @unique @db.ObjectId
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  investorIds  String[]   @db.ObjectId
  investors    Investor[] @relation(fields: [investorIds], references: [id])

  codatId      String?
  redirectLink String?
  blog         Post[]

  captable Json?
}

model Post {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  createdDate  DateTime @default(now())
  lastModified DateTime @default(now())
  title        String
  description  String

  creator   Startup @relation(fields: [creatorId], references: [id])
  creatorId String  @db.ObjectId
}
